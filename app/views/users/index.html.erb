<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<h1 class="text-center">Data to perform CRUD Operations</h1>
<br/>
<div class="container">
  <p>
    <%= link_to "Ð¡reate New User", new_user_path, class: "bi bi-person-plus btn btn-light" %>
  </p>
  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Username</th>
      <th scope="col">Email</th>
      <th scope="col">Password</th>
      <th scope="col" colspan="3" class="text-center">CRUD Operations</th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td class="text-center"><%= link_to "View", user, class: "bi bi-eye btn btn-primary" %></td>
        <td class="text-center"><%= link_to "Edit", edit_user_path(user), class: "bi bi-pencil btn btn-secondary" %></td>
        <td class="text-center"><%= button_to "Delete", user, :method => :delete, class: 'bi bi-trash btn btn-danger' %> </td>
    <% end %>
    </tr>
    </tr>
    </tbody>
  </table>
</div>

